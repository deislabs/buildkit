#!/usr/bin/env bash

. $(dirname $0)/util
set -eu -o pipefail -x

output=$(mktemp -d -t buildx-output.XXXXXXXXXX)

docker buildx build $progressFlag \
  --target update \
  --output "type=local,dest=$output" \
  --file ./hack/dockerfiles/vendor.Dockerfile \
  .

rm -rf ./vendor
cp -R "$output"/out/* .
rm -rf $output
